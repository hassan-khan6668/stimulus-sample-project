<div id="<%= dom_id(post) %>">
  <h2><%= post.title %></h2>
    <p><%= post.content %></p>
    <%= link_to "Edit", edit_post_path(post), class: "btn btn-secondary" %>
  <%= link_to "Delete", post_path(post), method: :delete, data: { turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %>
</div>
